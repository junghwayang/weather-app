<%- include("partials/header") %>

            <fieldset>
                <form action="/" method="POST">
                    <input name="location" type="text" class="ghost-input" placeholder="Enter a Location" required>
                    <input type="submit" class="ghost-button" value="♥︎ GET WEATHER ♥︎">
                </form>
            </fieldset>

            <% if (weather) { %>
                <div class="location__container">
                    <h1><%= location %></h1>
                    <p class="address"><%= address %></p>
                </div>

                <p><%= weather %></p>
            <% } %>

            <% if (error) { %>
                <p><%= error %></p>
            <% } %>
          
<%- include("partials/footer") %>